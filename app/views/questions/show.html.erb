<div class="header">
  <h1><%= @question.title %></h1>
  <div class= "question-comments">
    <% if session[:user_id] %>
    <div class="comment-form">
        <%= render partial:'comments/new.html.erb', locals:{post_type:"question", post:@question} %>
      </div>
      <button class="comment-button">Comment</button>
    <% end %>

    <button class="expand-comments-list">Show comments</button>
    <ol class="question-comments-list comments-list">
      <% @question.comments.each do |comment| %>
        <%= render partial:'comments/show.html.erb', locals:{comment:comment} %>
      <% end %>
    </ol>
  </div class="question-comments">

<div class="content">
  <div class="votes">
  </div>
</div>


<h2>There are <%= @question.answers.count %> answers</h2>
<ol class="answer-list">
  <% @question.answers.each do |answer| %>
  <li class="answer-<%= answer.id %>"> <%= answer.body %>
    <%= render partial:'comments/index.html.erb', locals:{post_type:"answer", post:answer} %>
  </li>
  <% end %>
</ol>

<%= render 'answers/new.html.erb' %>
</div>

<script type="text/template" id="comment-template">
<li class="comment-item">
  <div class="comment-body">
    {{= it.comment.body }}
  </div>
  <div class="comment-author">
    {{= it.user.username }}
  </div>
  <div class="comment-date">
    {{= it.comment.created_at }}
  </div>
</li>
</script>
